.map-wrap
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    overflow auto
    -webkit-overflow-scrolling touch
    cursor grab

    &_invisible
        opacity 0

    &_visible
        animation fadeInDown ease-in 0.5s
        animation-iteration-count 1
        transform-origin 50% 50%
        animation-fill-mode forwards
